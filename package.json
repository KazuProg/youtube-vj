{
  "name": "youtube-vj-2",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:write": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --apply src/",
    "type-check": "tsc --noEmit --skipLibCheck",
    "type-check:watch": "tsc --noEmit --watch --skipLibCheck",
    "preview": "vite preview",
    "prepare": "husky",
    "qa": "npm run type-check && npm run lint && npm run build",
    "qa:fix": "npm run format:write && npm run lint:fix && npm run type-check",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:windows": "tauri build --target x86_64-pc-windows-gnu",
    "tauri:build:windows:msvc": "tauri build --target x86_64-pc-windows-msvc"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.5.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.9.5",
    "use-indexeddb": "^2.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@tauri-apps/cli": "^2.5.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": ["biome check --write", "biome lint --write"],
    "*.{json,md,css}": ["biome format --write"],
    "src/**/*.{ts,tsx}": [
      "bash -c 'echo \"üîç TypeScriptÂûã„ÉÅ„Çß„ÉÉ„ÇØ‰∏≠...\"'",
      "bash -c 'cd \"$INIT_CWD\" && npx tsc --noEmit --skipLibCheck --project tsconfig.app.json'"
    ]
  }
}
