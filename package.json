{
  "name": "youtube-vj",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "setup": "npm run generate:midi-template && npm run docs",
    "dev": "npm run setup && vite --host",
    "preview": "npm run setup && vite preview",
    "prepare": "husky",
    "prebuild": "npm run setup && npm run package",
    "build": "tsc -b && vite build",
    "generate:midi-template": "node scripts/generate-midi-template.js",
    "docs": "eleventy --config=.eleventy.cjs",
    "package": "node scripts/package-chrome-extension.js",
    "check": "biome check src/",
    "fix": "biome check --write --no-errors-on-unmatched src/",
    "type-check": "tsc --noEmit --skipLibCheck --project tsconfig.app.json",
    "qa": "npm run fix && npm run type-check && npm run build"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "js-video-url-parser": "^0.5.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.9.5",
    "use-indexeddb": "^2.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "archiver": "^7.0.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css}": ["biome check --write --no-errors-on-unmatched"],
    "*.{ts,tsx}": ["bash -c 'tsc --noEmit --skipLibCheck --project tsconfig.app.json'"]
  }
}
