{
  "manifest_version": 3,
  "name": "YouTube-VJ Plus",
  "version": "1.0.0",
  "description": "YouTube-VJの使用をサポートし、作業効率を向上させる便利機能を提供します。",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_title": "YouTube-VJ Plus"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "js": ["js/yt-isolated.js"],
      "matches": ["https://www.youtube.com/*"],
      "world": "ISOLATED"
    },
    {
      "js": ["js/vj-isolated.js"],
      "matches": ["https://youtube-vj.kazuprog.work/"],
      "world": "ISOLATED"
    },
    {
      "js": ["js/vj-main.js"],
      "matches": ["https://youtube-vj.kazuprog.work/"],
      "world": "MAIN"
    }
  ]
}
